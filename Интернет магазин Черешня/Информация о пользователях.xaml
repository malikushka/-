                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label  Content="Телефон" Margin="10,1,0,352" Style="{StaticResource CustomLabelStyle}"/>
