<Window x:Class="Интернет_магазин_Черешня.Авторизация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интернет_магазин_Черешня"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid Background="#cccc99">
        <Border BorderBrush=" #BC987E" CornerRadius="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="248" Background="White">
            <TextBlock Text="Авторизация" FontSize="24" Margin="0,0,0,20" Width="143" />
                <Border CornerRadius="10">
                    <StackPanel>
                    <TextBlock  Width="200" Text="Введите логин" Background="Beige"/>
                    <!--<TextBlock  Width="200" Text="Введите пароль" Background="Beige" Margin="0 10 0 0"/>-->
                </StackPanel>
               </Border>
        <Button Content="Зарегистрироваться" Click="Button_Click" Width="150" Margin="0,100,0,0" BorderThickness="2" Background="Beige" BorderBrush=" #BC987E"/>
        </StackPanel>
        </Border>
    </Grid>
</Window>
